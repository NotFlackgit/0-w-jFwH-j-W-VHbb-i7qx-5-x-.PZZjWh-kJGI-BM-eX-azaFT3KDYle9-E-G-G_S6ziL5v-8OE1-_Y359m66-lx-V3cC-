@bot.message_handler(commands=['time'])
def time(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/time")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    timezones = [
        ("–ú–æ—Å–∫–≤–∞", "Europe/Moscow"),
        ("–ù—å—é-–ô–æ—Ä–∫", "America/New_York"),
        ("–õ–æ–Ω–¥–æ–Ω", "Europe/London"),
        ("–¢–æ–∫–∏–æ", "Asia/Tokyo"),
        ("–°–∏–¥–Ω–µ–π", "Australia/Sydney"),
        ("–ë–µ—Ä–ª–∏–Ω", "Europe/Berlin"),
        ("–î—É–±–∞–π", "Asia/Dubai"),
        ("–ü–µ–∫–∏–Ω", "Asia/Shanghai"),
        ("–õ–æ—Å-–ê–Ω–¥–∂–µ–ª–µ—Å", "America/Los_Angeles"),
        ("–†–∏–æ-–¥–µ-–ñ–∞–Ω–µ–π—Ä–æ", "America/Sao_Paulo")
    ]

    time_info = "üåç –í—Ä–µ–º—è –≤ —Ä–∞–∑–Ω—ã—Ö —á–∞—Å–æ–≤—ã—Ö –ø–æ—è—Å–∞—Ö:\n"
    for city, tz in timezones:
        now = datetime.now(pytz.timezone(tz))
        time_info += f"- {city}: {now.strftime('%H:%M:%S')}\n"

    bot.reply_to(message, time_info)



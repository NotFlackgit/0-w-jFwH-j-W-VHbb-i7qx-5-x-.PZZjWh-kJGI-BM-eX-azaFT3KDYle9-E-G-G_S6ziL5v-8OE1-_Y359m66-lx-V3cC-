COOLDOWN_TIME = 3
last_used_time = {}  


TOKEN = '7686912609:AAG6WXKI1RfwCZtQ04HBPBEbruXbNXkNPvw'
bot = telebot.TeleBot(TOKEN)

LOG_CHAT_ID = "-1002168101294"
owners = [5735189388, 1411680390]  


















OWNER_ID = 5735189388 
FAVORITE_ID = 1411680390 
cooldowns = {}
current_pairs = {}

@bot.message_handler(commands=['pair'])
def pair_handler(message):
    chat_id = message.chat.id
    now = datetime.now()

    # –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –Ω–∞–ª–∏—á–∏–µ –∞–∫—Ç–∏–≤–Ω–æ–≥–æ –∫—É–ª–¥–∞—É–Ω–∞
    if chat_id in cooldowns:
        last_used_time = cooldowns[chat_id]
        if now - last_used_time < timedelta(days=1):
            first_user, second_user = current_pairs[chat_id]
            bot.reply_to(message, f"üíû –ü–∞—Ä–∞ –¥–Ω—è —É–∂–µ: {first_user} –∏ {second_user}. –ú—É—Ä –º—è—É, –∂–∏–≤–∏—Ç–µ –¥—Ä—É–∂–Ω–æ!")
            return

    try:
        members = bot.get_chat_administrators(chat_id)
        members = [admin.user for admin in members]

        if len(members) < 2:
            bot.reply_to(message, "–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —É—á–∞—Å—Ç–Ω–∏–∫–æ–≤ –¥–ª—è –≤—ã–±–æ—Ä–∞ –ø–∞—Ä—ã.")
            return

        # –ü–æ–∏—Å–∫ –≤–ª–∞–¥–µ–ª—å—Ü–∞ –∏ –ª—é–±–∏–º–æ–π
        owner = next((m for m in members if m.id == OWNER_ID), None)
        favorite = next((m for m in members if m.id == FAVORITE_ID), None)
        
        pair = random.sample(members, 2)
        first_user = pair[0].first_name
        second_user = pair[1].first_name

        current_pairs[chat_id] = (first_user, second_user)
        bot.send_message(chat_id, f"üíì –ü–∞—Ä–∞ –¥–Ω—è: {first_user} –∏ {second_user}. –ú—É—Ä –º—è—É, –∂–∏–≤–∏—Ç–µ –¥—Ä—É–∂–Ω–æ!")

        cooldowns[chat_id] = now  # –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤—Ä–µ–º—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –∫–æ–º–∞–Ω–¥—ã

    except Exception as e:
        bot.reply_to(message, "–û—à–∏–±–∫–∞ –ø—Ä–∏ –≤—ã–±–æ—Ä–µ –ø–∞—Ä—ã.")
        print(f"–û—à–∏–±–∫–∞: {e}")

@bot.message_handler(commands=["own"])
def remove_buttons(message):
    if message.from_user.id in owners:
    	bot.send_message(message.chat.id, "–í—ã —Å–æ—Å—Ç–æ–∏—Ç–µ –≤ —Å–ø–∏—Å–∫–µ –¥–æ—Å—Ç—É–ø–∞.")
    else:
    	bot.send_message(message.chat.id, "–í—ã –Ω–µ —Å–æ—Å—Ç–æ–∏—Ç–µ –≤ —Å–ø–∏—Å–∫–µ –¥–æ—Å—Ç—É–ø–∞.")



@bot.message_handler(commands=['rmbt'])
def remove_buttons(message):
    """
    –£–¥–∞–ª—è–µ—Ç –∫–ª–∞–≤–∏–∞—Ç—É—Ä—É —Å –∫–Ω–æ–ø–∫–∞–º–∏, –µ—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤ —Å–ø–∏—Å–∫–µ –≤–ª–∞–¥–µ–ª—å—Ü–µ–≤.
    """
    if message.from_user.id in owners:
        markup = types.ReplyKeyboardRemove()  # –£–¥–∞–ª—è–µ–º –∫–ª–∞–≤–∏–∞—Ç—É—Ä—É
        bot.send_message(message.chat.id, "–ö–Ω–æ–ø–∫–∏ —É–¥–∞–ª–µ–Ω—ã.", reply_markup=markup)
    else:
    	bot.send_message(message.chat.id, "–ö–æ–º–∞–Ω–¥–∞ –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–∞. –í—ã –Ω–µ —Å–æ—Å—Ç–æ–∏—Ç–µ –≤ —Å–ø–∏—Å–∫–µ –≤–ª–∞–¥–µ–ª—å—Ü–µ–≤ –±–æ—Ç–∞.")














@bot.message_handler(commands=['ahelp'])
def ahelp(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/ahelp")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    help_text = (
        "‚ÑπÔ∏è *–°–ø–∏—Å–æ–∫ –¥–æ—Å—Ç—É–ø–Ω—ã—Ö –∫–æ–º–∞–Ω–¥:* \n\n"
        "/start - –ù–∞—á–∞—Ç—å –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏–µ —Å –±–æ—Ç–æ–º.\n"
        "/ping - –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —Å–≤—è–∑—å —Å –±–æ—Ç–æ–º.\n"
        "/gs - –£–≥–∞–¥–∞–π —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 100.\n"
        "/rlt - –ò–≥—Ä–∞–π –≤ —Ä—É—Å—Å–∫—É—é —Ä—É–ª–µ—Ç–∫—É.\n"
        "/hero - –ü–æ–ª—É—á–∏ —Å–ª—É—á–∞–π–Ω–æ–≥–æ –ø–µ—Ä—Å–æ–Ω–∞–∂–∞ —Å –æ—Ä—É–∂–∏–µ–º –∏ –º–∞–≥–∏—á–µ—Å–∫–∏–º –ø—Ä–µ–¥–º–µ—Ç–æ–º.\n"
        "/love @username - –£–∑–Ω–∞–π —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å —Å –¥—Ä—É–≥–∏–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º.\n"
        "/time - –ü–æ–ª—É—á–∏ –≤—Ä–µ–º—è –≤–æ –≤—Å–µ—Ö —á–∞—Å–æ–≤—ã—Ö –ø–æ—è—Å–∞—Ö –º–∏—Ä–∞.\n"
        "/stats - –ü–æ—Å–º–æ—Ç—Ä–µ—Ç—å —Å–≤–æ—é —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É.\n"
        "/actions ‚Äî –∫—É—Ä—Å—ã –±–∏—Ç–∫–æ–π–Ω–∞ –∏ –¥–æ–ª–ª–∞—Ä–∞ –≤ –≥—Ä–∏–≤–Ω–∞—Ö, —Ç–µ–Ω–≥–µ –∏ —Ä—É–±–ª—è—Ö\n"
        "–ü—Ä–æ—Å—Ç–æ –Ω–∞–ø–∏—à–∏—Ç–µ –∫–æ–º–∞–Ω–¥—É, —á—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å –æ –Ω–µ–π –±–æ–ª—å—à–µ!"
    )
    bot.reply_to(message, help_text)

def cooldown_handler(user_id):
    """–ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –∫—É–ª–¥–∞—É–Ω –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º datetime."""
    current_time = datetime.now()  # –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â–µ–µ –≤—Ä–µ–º—è
    last_used = last_used_time.get(user_id, None)

    if last_used and current_time - last_used < timedelta(seconds=COOLDOWN_TIME):
        remaining_time = (last_used + timedelta(seconds=COOLDOWN_TIME)) - current_time
        return remaining_time.seconds  # –í–æ–∑–≤—Ä–∞—â–∞–µ–º –æ—Å—Ç–∞–≤—à–µ–µ—Å—è –≤—Ä–µ–º—è –∫—É–ª–¥–∞—É–Ω–∞ –≤ —Å–µ–∫—É–Ω–¥–∞—Ö
    else:
        last_used_time[user_id] = current_time  # –û–±–Ω–æ–≤–ª—è–µ–º –≤—Ä–µ–º—è –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è
        return None
        
        



# –õ–æ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ –≤ Telegram
def log_to_telegram(message):
    user = message.from_user
    log_entry = (
        f"–î–∞—Ç–∞ –∏ –≤—Ä–µ–º—è: {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}\n"
        f"–ò–º—è: {user.first_name} {user.last_name or ''}\n"
        f"–Æ–∑–µ—Ä–Ω–µ–π–º: @{user.username or '–Ω–µ—Ç'}\n"
        f"ID –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: {user.id}\n"
        f"ID link: tg://user?id={user.id}\n"
        f"–ö–æ–º–∞–Ω–¥–∞: {message.text}/n"
        f"–ö–æ–Ω–µ—Ü –ª–æ–≥–∞----"
    )
    bot.send_message(LOG_CHAT_ID, log_entry)



@bot.message_handler(commands=['start'])
def send_welcome(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/start")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    bot.reply_to(message, "–î–∞—Ä–æ–≤–∞ —á–∏–∂–∏–∫!\n –ö–æ–º–∞–Ω–¥—ã –±–æ—Ç–∞: /ahelp –æ—Å—Ç–∞–ª—å–Ω–æ–µ —Å–∞–º)")

conn = sqlite3.connect('simple_guess_game.db', check_same_thread=False)
cursor = conn.cursor()

# –£–¥–∞–ª–µ–Ω–∏–µ —Å—Ç–∞—Ä–æ–π —Ç–∞–±–ª–∏—Ü—ã (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ, —Ç–æ–ª—å–∫–æ –ø—Ä–∏ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ)
cursor.execute("DROP TABLE IF EXISTS statistics")

# –°–æ–∑–¥–∞–Ω–∏–µ —Ç–∞–±–ª–∏—Ü—ã —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ —Å –Ω—É–∂–Ω—ã–º–∏ –∫–æ–ª–æ–Ω–∫–∞–º–∏
cursor.execute("""
CREATE TABLE IF NOT EXISTS statistics (
    user_id INTEGER PRIMARY KEY,
    wins INTEGER DEFAULT 0,
    shots INTEGER DEFAULT 0,
    blanks INTEGER DEFAULT 0
    
)
""")
conn.commit()














# –ö–æ–º–∞–Ω–¥–∞ –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è —Ñ–æ—Ç–æ –∫–æ—Ç–∏–∫–∞
@bot.message_handler(regexp=r"(?i)^(cat|–∫–æ—Ç|–∫–æ—à–∫–∞|–∫–∏—Ç–∏–∫)$")
def send_cat_picture(message):
    """–û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç —Ñ–æ—Ç–æ –∫–æ—Ç–∏–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ —Å–æ–æ–±—â–µ–Ω–∏—è —Å –æ–¥–Ω–∏–º –∏–∑ —É–∫–∞–∑–∞–Ω–Ω—ã—Ö —Å–ª–æ–≤"""
    response = requests.get('https://api.thecatapi.com/v1/images/search')
    
    if response.status_code == 200:
        cat_data = response.json()
        cat_url = cat_data[0].get('url', None)
        if cat_url:
            bot.send_photo(message.chat.id, cat_url)
            print("------\n.cat")
        else:
            bot.send_message(message.chat.id, "–ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å —Å—Å—ã–ª–∫—É –Ω–∞ –∫–æ—Ç–∏–∫–∞ üòø")
    else:
        bot.send_message(message.chat.id, "API –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–∑–∂–µ.")








import subprocess




def get_memory_status():
    try:
        # –ö–æ–º–∞–Ω–¥–∞ –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –ø–∞–º—è—Ç–∏ –Ω–∞ Linux/Android
        result = subprocess.run(['free', '-m'], stdout=subprocess.PIPE)
        output = result.stdout.decode('utf-8').splitlines()

        # –ü–∞—Ä—Å–∏–º –≤—ã–≤–æ–¥ –∫–æ–º–∞–Ω–¥—ã free
        memory_info = output[1].split()
        total_memory = memory_info[1]
        used_memory = memory_info[2]
        free_memory = memory_info[3]
        memory_percent = memory_info[4]

        return f"–ò—Å–ø–æ–ª—å–∑—É–µ–º–∞—è –ø–∞–º—è—Ç—å: {used_memory} MB / {total_memory} MB\n" \
               f"–°–≤–æ–±–æ–¥–Ω–∞—è –ø–∞–º—è—Ç—å: {free_memory} MB\n" \
               f"–ü—Ä–æ—Ü–µ–Ω—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è: {memory_percent}%"
    except Exception as e:
        return f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –ø–∞–º—è—Ç–∏: {e}"

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ CPU
def get_cpu_status():
    try:
        # –ü–æ–ª—É—á–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ CPU —Å –ø–æ–º–æ—â—å—é –∫–æ–º–∞–Ω–¥—ã top
        result = subprocess.run(['top', '-bn1'], stdout=subprocess.PIPE)
        output = result.stdout.decode('utf-8').splitlines()

        # –ò—â–µ–º —Å—Ç—Ä–æ–∫—É —Å –¥–∞–Ω–Ω—ã–º–∏ –æ CPU
        for line in output:
            if line.startswith('Cpu(s)'):
                cpu_info = line.split(",")
                cpu_percent = cpu_info[0].split()[1]  # –ü–æ–ª—É—á–∞–µ–º –ø—Ä–æ—Ü–µ–Ω—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è CPU
                return f"–ü—Ä–æ—Ü–µ–Ω—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è CPU: {cpu_percent}%"
    except Exception as e:
        return f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ CPU: {e}"

# –ö–æ–º–∞–Ω–¥–∞ –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è —Å—Ç–∞—Ç—É—Å–∞ —Å–µ—Ä–≤–µ—Ä–∞
@bot.message_handler(commands=["ping", "cpu", "server"])
def server_status(message):
    if message.from_user.id in owners:  # –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –Ω–∞–ª–∏—á–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ —Å–ø–∏—Å–∫–µ –≤–ª–∞–¥–µ–ª—å—Ü–µ–≤
        try:
            memory_status = get_memory_status()
            cpu_status = get_cpu_status()

            status_message = (
                f"üñ•Ô∏è <b>–°—Ç–∞—Ç—É—Å —Å–µ—Ä–≤–µ—Ä–∞</b>:\n"
                f"{memory_status}\n"
                f"{cpu_status}"
            )

            # –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
            bot.send_message(message.chat.id, status_message, parse_mode='HTML')

        except Exception as e:
            bot.send_message(message.chat.id, f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ –¥–∞–Ω–Ω—ã—Ö: {e}")
    else:
        bot.send_message(message.chat.id, "–í—ã –Ω–µ —Å–æ—Å—Ç–æ–∏—Ç–µ –≤ —Å–ø–∏—Å–∫–µ –¥–æ—Å—Ç—É–ø–∞.")








@bot.message_handler(commands=['spam'])
def spam_handler(message):
    """–û–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ—Ç –∫–æ–º–∞–Ω–¥—É /spam –∏ –æ—Ç–ø—Ä–∞–≤–ª—è–µ—Ç —Å–æ–æ–±—â–µ–Ω–∏—è —Å–ø–∞–º–æ–º."""
    try:
        args = message.text.split(maxsplit=2)
        if len(args) < 3:
            bot.send_message(message.chat.id, "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: /spam <–∫–æ–ª–∏—á–µ—Å—Ç–≤–æ> <—Ç–µ–∫—Å—Ç>")
            return

        count = int(args[1])  # –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å–æ–æ–±—â–µ–Ω–∏–π
        text = args[2]  # —Ç–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è

        # –û–≥—Ä–∞–Ω–∏—á–µ–Ω–∏–µ –Ω–∞ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
        if count > 999:
            bot.send_message(message.chat.id, "–ú–∞–∫—Å–∏–º—É–º 10 —Å–æ–æ–±—â–µ–Ω–∏–π –∑–∞ –æ–¥–∏–Ω —Ä–∞–∑!")
            return

        for i in range(count):
            bot.send_message(message.chat.id, text)

    except ValueError:
        bot.send_message(message.chat.id, "–£–∫–∞–∂–∏—Ç–µ —á–∏—Å–ª–æ –∏ —Ç–µ–∫—Å—Ç! –ü—Ä–∏–º–µ—Ä: /spam 5 –ü—Ä–∏–≤–µ—Ç!")
    except Exception as e:
        bot.send_message(message.chat.id,)

#actions
@bot.message_handler(commands=['actions'])
def send_exchange_rates(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/actions")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    try:
        # –ü–æ–ª—É—á–∞–µ–º –¥–∞–Ω–Ω—ã–µ –æ –∫—É—Ä—Å–∞—Ö –≤–∞–ª—é—Ç –∏ –±–∏—Ç–∫–æ–π–Ω–∞
        response = requests.get("https://api.exchangerate-api.com/v4/latest/USD")
        btc_response = requests.get("https://api.coindesk.com/v1/bpi/currentprice.json")

        if response.status_code == 200 and btc_response.status_code == 200:
            data = response.json()
            btc_data = btc_response.json()

            # –ö—É—Ä—Å—ã –≤–∞–ª—é—Ç
            usd_to_uah = data['rates'].get('UAH', '–Ω–µ—Ç –¥–∞–Ω–Ω—ã—Ö')
            usd_to_kzt = data['rates'].get('KZT', '–Ω–µ—Ç –¥–∞–Ω–Ω—ã—Ö')
            usd_to_rub = data['rates'].get('RUB', '–Ω–µ—Ç –¥–∞–Ω–Ω—ã—Ö')

            # –ö—É—Ä—Å –±–∏—Ç–∫–æ–π–Ω–∞ –≤ USD
            btc_to_usd = btc_data['bpi']['USD']['rate']

            # –§–æ—Ä–º–∏—Ä—É–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
            text = (
                f"üíπ *–ö—É—Ä—Å—ã –≤–∞–ª—é—Ç –∏ –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç:*\n\n"
                f"üíµ 1 –î–æ–ª–ª–∞—Ä –°–®–ê:\n"
                f"‚Äî üá∫üá¶ –ì—Ä–∏–≤–Ω—ã: {usd_to_uah} UAH\n"
                f"‚Äî üá∞üáø –¢–µ–Ω–≥–µ: {usd_to_kzt} KZT\n"
                f"‚Äî üá∑üá∫ –†—É–±–ª–∏: {usd_to_rub} RUB\n\n"
                f"‚Çø 1 –ë–∏—Ç–∫–æ–π–Ω (BTC):\n"
                f"‚Äî {btc_to_usd} USD"
            )
        else:
            text = "‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å –¥–∞–Ω–Ω—ã–µ –æ –∫—É—Ä—Å–∞—Ö –≤–∞–ª—é—Ç."

        # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
        bot.reply_to(message, text)

    except Exception as e:
        bot.reply_to(message, f"‚ùå –ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞: {e}")

#love
@bot.message_handler(commands=['love'])
def love(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/love")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    try:
        # –†–∞–∑–±–∏–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –Ω–∞ —Å–ª–æ–≤–∞, —á—Ç–æ–±—ã –ø–æ–ª—É—á–∏—Ç—å —É–ø–æ–º—è–Ω—É—Ç–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        mentioned_user = message.text.split()[1] if len(message.text.split()) > 1 else None
        
        if mentioned_user:
            # –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Å–ª—É—á–∞–π–Ω—ã–π –ø—Ä–æ—Ü–µ–Ω—Ç —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏
            compatibility = random.randint(0, 100)
            bot.reply_to(message, f"üíñ –°–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å —Å {mentioned_user}: {compatibility}%!")
        else:
            bot.reply_to(message, "‚ùå –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, —É–∫–∞–∂–∏—Ç–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –ø–æ—Å–ª–µ –∫–æ–º–∞–Ω–¥—ã, –Ω–∞–ø—Ä–∏–º–µ—Ä: /love @username.")
    except Exception as e:
        bot.reply_to(message, f"‚ùå –ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞: {e}")

# –ö–æ–º–∞–Ω–¥–∞ /hero
@bot.message_handler(commands=['hero'])
def char(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/hero")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    name = random.choice(names)
    weapon = random.choice(weapons)
    magical_item = random.choice(magical_items)
    title = random.choice(titles)

    # –¢–µ–∫—Å—Ç–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
    text = (
        f"‚ú® *–í–∞—à –Ω–æ–≤—ã–π –ø–µ—Ä—Å–æ–Ω–∞–∂* ‚ú®\n\n"
        f"–ò–º—è: {name}\n"
        f"–û—Ä—É–∂–∏–µ: {weapon}\n"
        f"–ú–∞–≥–∏—á–µ—Å–∫–∏–π –ø—Ä–µ–¥–º–µ—Ç: {magical_item}\n"
        f"–ó–≤–∞–Ω–∏–µ: {title}\n\n"
        f"–ü—É—Å—Ç—å –ø—Ä–∏–∫–ª—é—á–µ–Ω–∏—è –±—É–¥—É—Ç –∑–∞—Ö–≤–∞—Ç—ã–≤–∞—é—â–∏–º–∏!"
    )

    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
    bot.reply_to(message, text)

# –ê–∫—Ç–∏–≤–Ω—ã–µ –∏–≥—Ä—ã –¥–ª—è —É–≥–∞–¥—ã–≤–∞–Ω–∏—è —á–∏—Å–µ–ª
active_games = {}

# –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ –ø–æ–±–µ–¥
def update_wins(user_id):
    cursor.execute("SELECT wins FROM statistics WHERE user_id = ?", (user_id,))
    if cursor.fetchone():
        cursor.execute("UPDATE statistics SET wins = wins + 1 WHERE user_id = ?", (user_id,))
    else:
        cursor.execute("INSERT INTO statistics (user_id, wins) VALUES (?, 1)", (user_id,))
    conn.commit()

# –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ –¥–ª—è —Ä—É–ª–µ—Ç–∫–∏
def update_roulette_stats(user_id, is_shot):
    cursor.execute("SELECT * FROM statistics WHERE user_id = ?", (user_id,))
    if cursor.fetchone():
        if is_shot:
            cursor.execute("UPDATE statistics SET shots = shots + 1 WHERE user_id = ?", (user_id,))
        else:
            cursor.execute("UPDATE statistics SET blanks = blanks + 1 WHERE user_id = ?", (user_id,))
    else:
        cursor.execute(
            "INSERT INTO statistics (user_id, wins, shots, blanks) VALUES (?, 0, ?, ?)",
            (user_id, 1 if is_shot else 0, 0 if is_shot else 1)
        )
    conn.commit()

# –ö–æ–º–∞–Ω–¥–∞ "–£–≥–∞–¥–∞–π —á–∏—Å–ª–æ"
@bot.message_handler(commands=['gs'])
def start_game(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/gs")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    chat_id = message.chat.id
    if chat_id in active_games:
        bot.reply_to(message, "üé≤ –ò–≥—Ä–∞ —É–∂–µ –Ω–∞—á–∞–ª–∞—Å—å! –£–≥–∞–¥–∞–π —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 100.")
    else:
        number = random.randint(1, 100)
        active_games[chat_id] = number
        bot.reply_to(message, "üé≤ –Ø –∑–∞–≥–∞–¥–∞–ª —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 100. –ü–æ–ø—Ä–æ–±—É–π —É–≥–∞–¥–∞—Ç—å!")

# –£–≥–∞–¥—ã–≤–∞–Ω–∏–µ —á–∏—Å–ª–∞
@bot.message_handler(func=lambda message: message.text.isdigit())
def guess_number(message):
    
    chat_id = message.chat.id
    user_id = message.from_user.id
    if chat_id not in active_games:
        return

    guessed_number = int(message.text)
    secret_number = active_games[chat_id]
    if guessed_number == secret_number:
        bot.reply_to(message, f"üéâ –ü–æ–∑–¥—Ä–∞–≤–ª—è—é! –¢—ã —É–≥–∞–¥–∞–ª! –≠—Ç–æ –±—ã–ª–æ —á–∏—Å–ª–æ {secret_number}.")
        update_wins(user_id)
        del active_games[chat_id]
    elif guessed_number < secret_number:
        bot.reply_to(message, "üìà –°–ª–∏—à–∫–æ–º –º–∞–ª–æ, –ø–æ–ø—Ä–æ–±—É–π –±–æ–ª—å—à–µ!")
    else:
        bot.reply_to(message, "üìâ –°–ª–∏—à–∫–æ–º –º–Ω–æ–≥–æ, –ø–æ–ø—Ä–æ–±—É–π –º–µ–Ω—å—à–µ!")

# –†—É—Å—Å–∫–∞—è —Ä—É–ª–µ—Ç–∫–∞
@bot.message_handler(commands=['rlt'])
def roulette_game(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/rlt")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    user_id = message.from_user.id
    outcome = random.randint(1, 6)
    if outcome == 1:
        bot.reply_to(message, "üí• –ë–ê–•! –¢—ã –ø—Ä–æ–∏–≥—Ä–∞–ª!")
        update_roulette_stats(user_id, is_shot=True)
    else:
        bot.reply_to(message, "üòÖ –ö–ª–∞—Ü! –ü—É–ª—è –º–∏–º–æ, —Ç—ã –≤—ã–∂–∏–ª!")
        update_roulette_stats(user_id, is_shot=False)

# –ü–æ–∫–∞–∑–∞—Ç—å —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É
@bot.message_handler(commands=['stats'])
def show_stats(message):
    user_id = message.from_user.id
    cooldown = cooldown_handler(user_id)

    if cooldown is not None:
        bot.reply_to(message, f"–ü–æ–¥–æ–∂–¥–∏—Ç–µ {cooldown} —Å–µ–∫—É–Ω–¥.")
        return
    log_to_telegram(message)
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    print("/stats")
    print("‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú‚¨ú")
    user_id = message.from_user.id
    cursor.execute("SELECT wins, shots, blanks FROM statistics WHERE user_id = ?", (user_id,))
    data = cursor.fetchone()
    if data:
        wins, shots, blanks = data
        bot.reply_to(
            message,
            f"üìä –¢–≤–æ—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞:\n"
            f"üèÜ –ü–æ–±–µ–¥—ã –≤ —É–≥–∞–¥–∞–π —á–∏—Å–ª–æ: {wins}\n"
            f"üî´ –í—ã—Å—Ç—Ä–µ–ª—ã –≤ —Ä—É–ª–µ—Ç–∫–µ: {shots}\n"
            f"üòÖ –•–æ–ª–æ—Å—Ç—ã–µ –≤—ã—Å—Ç—Ä–µ–ª—ã: {blanks}"
        )
    else:
        bot.reply_to(message, "üìä –£ —Ç–µ–±—è –ø–æ–∫–∞ –Ω–µ—Ç —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏.")


 







